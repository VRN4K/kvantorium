<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Названия стиля текста формируется по шаблону:
  ШрифтНачертание.Цвет.Размер, например, FactorAMedium.Accent.20.

  Шрифты:
      - Geometria
  Начертания:
      - Regular.
      - Bold.
  Цвета:
      - PrimaryText;
      - SecondaryText;
  Размеры:
      -

  Можно брать не конечные стили исключая последующие, например: FactorAMedium, FactorAMedium.Accent;
  -->

    <!--______________________________TYPEFACE_____________________________________-->
    <!--______________________________Geometria___________________________________-->
    <style name="GeometriaRegular">
        <item name="android:fontFamily">@font/geometriaregular</item>
    </style>

    <style name="GeometriaBold">
        <item name="android:fontFamily">@font/geometriabold</item>
    </style>

    <!--______________________________Color_________________________________________-->
    <!--______________________________Primary_________________________________-->

    <style name="GeometriaRegular.PrimaryLight">
        <item name="android:textColor">@color/primary_light</item>
    </style>

    <style name="GeometriaRegular.PrimaryDark">
        <item name="android:textColor">@color/primary_dark</item>
    </style>

    <style name="GeometriaRegular.HintAccent">
        <item name="android:textColor">@color/hint_accent</item>
    </style>
    <!--______________________________Primary_________________________________-->
    <style name="GeometriaBold.PrimaryLight">
