<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:orientation="vertical">

    <TextView
        android:id="@+id/skip_button"
        style="@style/GeometriaRegular.PrimaryLight.12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="54dp"
        android:text="@string/onboarding_skip_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/onboarding_img"
        android:layout_width="match_parent"
        android:layout_marginTop="16dp"
        android:layout_height="400dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toBottomOf="@id/skip_button"
        tools:src="@drawable/raspisanie" />

    <TextView
        android:id="@+id/onboarding_title"
        style="@style/GeometriaBold.PrimaryLight.24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_img"
        tools:text="Расписание" />

    <TextView
        android:id="@+id/onboarding_description"
        style="@style/GeometriaRegular.PrimaryLight.14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingVertical="6dp"
        android:paddingHorizontal="55dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/onboarding_title"
        tools:text="В приложении можно отслеживать актуальное расписание" />

</androidx.constraintlayout.widget.ConstraintLayout>