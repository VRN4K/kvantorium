<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue"
    android:orientation="vertical">

    <Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity=""
            android:layout_marginStart="16dp"
            android:src="@drawable/ic_left" />

        <TextView
            style="@style/GeometriaBold.PrimaryLight.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/sing_up_title" />
    </Toolbar>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text_user_name"
        style="@style/TextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:boxStrokeColor="@color/primary_light"
        app:hintTextAppearance="@style/GeometriaRegular.HintAccent.16"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        tools:hint="Вероничка">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/GeometriaRegular.PrimaryDark.16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/edit_text_user_lastname"
        style="@style/TextInputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:boxStrokeColor="@color/primary_light"
        app:hintTextAppearance="@style/GeometriaRegular.HintAccent.16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edit_text_user_name"
        tools:hint="Капитанова">

        <com.google.android.material.textfield.TextInputEditText
            style="@style/GeometriaRegular.PrimaryDark.16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/next_item_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/button_background"
        android:backgroundTint="@color/primary_light"
        android:paddingVertical="8dp"
        android:text="@string/onboarding_next_button"
        android:textAppearance="@style/GeometriaBold.PrimaryDark.18"
        android:textColor="@color/primary_dark"
        app:layout_constraintBottom_toTopOf="@id/sing_in_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/sing_in_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/next_item_button">

        <TextView
            style="@style/GeometriaBold.PrimaryLight.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/sing_up_title" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>