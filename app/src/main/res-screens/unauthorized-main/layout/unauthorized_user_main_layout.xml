<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/onboarding_img"
            android:layout_width="match_parent"
            android:layout_height="360dp"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/onboarding_title"
            style="@style/GeometriaBold.PrimaryLight.24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/unauthorized_user_welcome_title" />

        <TextView
            android:id="@+id/onboarding_description"
            style="@style/GeometriaRegular.PrimaryLight.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingHorizontal="55dp"
            android:paddingVertical="6dp"
            android:text="@string/unauthorized_user_description"
            android:textAlignment="center" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sing_up_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/background_dark_blue"
            android:paddingVertical="8dp"
            android:text="@string/unauthorized_user_singin_button_text"
            android:textAppearance="@style/GeometriaBold.PrimaryDark.18"
            android:textColor="@color/primary_light" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/sing_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/primary_light"
            android:paddingVertical="8dp"
            android:text="@string/unauthorized_user_singup_button_text"
            android:textAppearance="@style/GeometriaBold.PrimaryDark.18"
            android:textColor="@color/primary_dark" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>