<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="10dp"
    app:cardBackgroundColor="@color/background_blue"
    app:cardCornerRadius="15dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="84dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_title"
                style="@style/GeometriaBold.PrimaryLight.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Космоквантум" />

            <TextView
                style="@style/GeometriaRegular.PrimaryLight.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Преподаватели" />

            <TextView
                android:id="@+id/teacher_first"
                style="@style/GeometriaBold.PrimaryLight.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Стрельба С. А." />

            <TextView
                android:id="@+id/teacher_second"
                style="@style/GeometriaBold.PrimaryLight.16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Кузнецов В. П." />
        </LinearLayout>

        <ImageView
            android:id="@+id/course_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginBottom="20dp"
            tools:src="@drawable/course_item" />
    </LinearLayout>


</androidx.cardview.widget.CardView>
